		<command name="getItemDetail">
			<controller class="Fullplay.Ctl.getItemDetail, Fullplay"/>
			
			<view name="error" type="redirect" path="getView.m?view=SystemError"/>
			
			<view name="success">
				<transform output-type="text/xml" path="templates/mucisdetail.xsl" />
			</view>	
			<view name="review">
				<transform output-type="text/xml" path="templates/review.xsl" />
			</view>
			<view name="game">
				<transform output-type="text/xml" path="templates/gamedetail.xsl" />
			</view>
			<view name="video">
				<transform output-type="text/xml" path="templates/videodetail.xsl" />
			</view>
			
			<view name="nomedia" type="redirect" path="getView.m?view=NoMedia"/>
			
		</command>

		<command name="getHome">
			<controller class="Fullplay.Ctl.getHome, Fullplay"/>
			<view name="success" type="redirect" path="getGenres.m?mediaid=1"/>
		</command>
		
		<command name="getDiscography">
			<controller class="Fullplay.Ctl.getDiscography, Fullplay"/>
			
			<view name="success">
				<transform output-type="text/xml" path="templates/disco.xsl"/>
			</view>
		</command>
		
		<command name="getGenres">
			<controller class="Fullplay.Ctl.getGenres, Fullplay"/>
			<view name="success">
				<transform output-type="text/xml" path="templates/browse.xsl"/>
			</view>
			<view name="game">
					<transform output-type="text/xml" path="templates/browse_game.xsl"/>
			</view>
			<view name="video">
					<transform output-type="text/xml" path="templates/browse_video.xsl"/>
			</view>
				
		</command>
		
		<command name="getArtists">
			<controller class="Fullplay.Ctl.getArtists, Fullplay"/>
			<view name="success">
				<transform output-type="text/xml" path="templates/browsedetailmusic.xsl"/>
			</view>
		</command>

		<command name="getView">
			<controller class="Fullplay.Ctl.getView, Fullplay"/>
			
			<view name="keyboard">
				<transform output-type="text/xml" path="templates/keyboard.xsl"/>
			</view>
			<view name="browse">
				<transform output-type="text/xml" path="templates/browse.xsl"/>
			</view>
			<view name="proddetail">
				<transform output-type="text/xml" path="templates/proddetail.xsl"/>
			</view>
			<view name="reclist">
				<transform output-type="text/xml" path="templates/reclist.xsl"/>
			</view>
			<view name="browsedetail">
				<transform output-type="text/xml" path="templates/browsedetail.xsl"/>
			</view>
			
			<view name="default">
				<transform output-type="text/xml" path="templates/browse.xsl"/>
			</view>
			<view name="musicdetail">
				<transform output-type="text/xml" path="templates/musicdetail.xsl"/>
			</view>
			<view name="videodetail">
				<transform output-type="text/xml" path="templates/videodetail.xsl"/>
			</view>
			<view name="gamedetail">
				<transform output-type="text/xml" path="templates/gamedetail.xsl"/>
			</view>
			
		</command>
		
		<command name="scan">
			<controller class="Fullplay.Ctl.scan, Fullplay"/>
			<view name="itemdetail" type="redirect" path="getItemDetail.m"/>
			<view name="HardSellItemDetail" type="redirect" path="getHardSellItem.m"/>
			<view name="admin" type="redirect" path="admin_home.aspx"/>
			<view name="login" type="redirect" path="login.m"/>
			<view name="error" type="redirect" path="getView.m?view=NoMedia"/>
			<view name="home" type ="redirect" path="getHome.m"/>
		</command>
		
		<command name="Search">
			<controller class="Fullplay.Ctl.Search, Fullplay"/>
			<view name="content">
				<transform output-type="text/xml" path="templates/SearchContent.xsl" />
			</view>
			<view name="success">
				<transform output-type="text/xml" path="templates/keyboardSearch.xsl" />
			</view>
		</command>
		<command name="unlock">
			<controller class="Fullplay.Ctl.unlock, Fullplay"/>
			<view name="success" type="redirect" path="admin_setlocation.aspx"/>
		</command>
		
	</commands>
</maverick>
